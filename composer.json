{
	"name": "sanatorium/hoofmanager",
	"type": "platform-extension",
	"description": "Hoof manager extension",
	"authors": [
		{
			"name": "Sanatorium",
			"email": "info@sanatorium.ninja"
		}
	],
	"repositories": [
		{
			"type": "composer",
			"url": "http://packages.cartalyst.com"
		}
	],
	"require": {
		"php": ">=5.4.0",
		"cartalyst/composer-installers": "1.2.*",
		"illuminate/support": "~5.0",
		"platform/foundation": "2.0.*"
	},
	"autoload": {
		"classmap": [
			"database/migrations",
			"database/seeds"
		],
		"psr-4": {
			"Sanatorium\\Hoofmanager\\": "src/"
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true
}
